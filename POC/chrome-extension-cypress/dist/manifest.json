{
    "manifest_version": 3,

    "name": "Cypress Assistant",
    "description":
        "Cypress Assistant",
    "version": "1.0.0",

    "action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "eventPage.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webNavigation",
        "scripting",
        "webRequest"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "commands": {
        "start-recording": {
            "suggested_key": {
                "default": "Alt+R",
                "mac": "MacCtrl+R",
                "linux": "Alt+R"
            },
            "description": "Toggle recording"
        },
        "reset-recording": {
            "suggested_key": {
                "default": "Alt+G",
                "mac": "MacCtrl+G",
                "linux": "Alt+G"
            },
            "description": "Reset recording"
        }
    }
}
